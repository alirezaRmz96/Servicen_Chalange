<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.fragments.PhotoIdFragment">



    <TextView
        android:id="@+id/albumID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="?attr/colorSecondaryVariant"
        android:layout_marginTop="@dimen/_10dp"
        android:textSize="@dimen/_25sp"
        android:textStyle="bold"
        android:text="@string/albumid_title"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/PhotoID"
        android:gravity="center"
        android:background="?attr/colorSecondaryVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_25sp"
        android:textStyle="bold"
        android:text="@string/photoId"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/photo_Url"
        android:layout_width="match_parent"
        android:src="@drawable/account_box"
        android:layout_height="450dp"
        android:layout_marginTop="@dimen/_10dp"
        android:fitsSystemWindows="true"
        />
    <TextView
        android:layout_marginLeft="@dimen/_10dp"
        android:id="@+id/title_Album"
        android:layout_width="match_parent"
        android:text="non sunt voluptatem placeat consequuntur rem incidunt"
        android:textSize="@dimen/_30sp"
        android:layout_marginTop="@dimen/_10dp"
        android:textStyle="italic"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:shadowRadius="@integer/material_motion_duration_long_1"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_height="match_parent"/>

</LinearLayout>